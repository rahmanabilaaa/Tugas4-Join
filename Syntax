SELECT CONCAT(ID, ' ', name) AS PROFILE
FROM student;

SELECT SUBSTRING_INDEX(title, ' ', 1) AS PRODI_INDEX
FROM course;

SELECT SUBSTR(dept_name, 1, 3) AS PERSON
FROM department;

SELECT LENGTH(name) AS name_length
FROM instructor;

SELECT semester, REPLACE(semester, 'Fall', 'Autumn')
FROM section;

SELECT TRIM(both from building) AS trimmed_building
FROM classroom;

SELECT UPPER(dept_name) AS upper_deptname
FROM department;

SELECT LOWER(building) AS lower_building
FROM department;
